# Kimi K2 API Configuration
KIMI_API_KEY=your_kimi_k2_api_key_here
KIMI_API_URL=https://api.moonshot.cn/v1

# Application Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000
ENVIRONMENT=production
DEBUG=false

# CORS Settings (adjust for your domain)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Security Settings
API_RATE_LIMIT=100
MAX_REQUEST_SIZE=10485760  # 10MB

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs/app.log

# Optional: Database Configuration (for future enhancements)
# DATABASE_URL=postgresql://user:password@localhost:5432/abc_framework

# Optional: Redis Configuration (for caching)
# REDIS_URL=redis://localhost:6379/0

# Optional: Monitoring
# SENTRY_DSN=your_sentry_dsn_here
# PROMETHEUS_ENABLED=true